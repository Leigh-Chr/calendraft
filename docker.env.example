# ===================================
# Calendraft - Docker Environment Variables
# Copy this file to .env and update values
# ===================================

# -----------------------------------
# PostgreSQL Database
# -----------------------------------
POSTGRES_USER=calendraft
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=calendraft
POSTGRES_PORT=5432

# -----------------------------------
# Backend Server
# -----------------------------------
SERVER_PORT=3000
CORS_ORIGIN=http://localhost:3001
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=change-me-in-production-min-32-characters-long
BETTER_AUTH_URL=http://localhost:3000

# Sentry (optional - error monitoring)
SENTRY_DSN=

# -----------------------------------
# Polar Payments (optional - for subscriptions)
# -----------------------------------
POLAR_ACCESS_TOKEN=
POLAR_WEBHOOK_SECRET=
POLAR_SUCCESS_URL=http://localhost:3001/success
POLAR_PRODUCT_PERSONAL_ID=
POLAR_PRODUCT_PRO_ID=

# -----------------------------------
# Frontend Web
# -----------------------------------
WEB_PORT=3001
# IMPORTANT: This URL must be accessible from the browser, not from Docker network
# For local dev: http://localhost:3000
# For production: https://api.yourdomain.com
VITE_SERVER_URL=http://localhost:3000

# Sentry (optional - error monitoring)
VITE_SENTRY_DSN=

# -----------------------------------
# Production Notes
# -----------------------------------
# 1. Change all passwords and secrets
# 2. Set CORS_ORIGIN to your frontend URL
# 3. Set BETTER_AUTH_URL to your backend URL
# 4. Set VITE_SERVER_URL to your backend URL (accessible from browser)
# 5. Configure SSL/TLS with a reverse proxy (Nginx, Traefik, Caddy)
