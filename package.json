{
	"name": "calendraft",
	"private": true,
	"license": "MIT",
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.10.7",
			"@trpc/server": "^11.5.0",
			"better-auth": "^1.4.0",
			"dotenv": "^17.2.3",
			"zod": "^4.1.13",
			"typescript": "^5.8.2",
			"tsdown": "^0.16.8",
			"@trpc/client": "^11.5.0",
			"@prisma/client": "^7.0.1"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @calendraft/db db:push",
		"db:studio": "turbo -F @calendraft/db db:studio",
		"db:generate": "turbo -F @calendraft/db db:generate",
		"db:migrate": "turbo -F @calendraft/db db:migrate",
		"db:seed": "turbo -F @calendraft/db db:seed"
	},
	"dependencies": {
		"@hono/trpc-server": "^0.4.1",
		"dotenv": "^17.2.3",
		"hono": "^4.10.7",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.4",
		"husky": "^9.1.7",
		"knip": "^5.72.0",
		"lint-staged": "^16.2.7",
		"tsdown": "^0.17.2",
		"turbo": "^2.6.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.1",
	"overrides": {
		"glob": "^10.5.0",
		"react": "19.2.0",
		"react-dom": "19.2.0"
	}
}
