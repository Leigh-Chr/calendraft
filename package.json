{
	"name": "calendraft",
	"private": true,
	"license": "AGPL-3.0",
	"type": "module",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"hono": "^4.10.7",
			"@trpc/server": "^11.8.0",
			"@trpc/client": "^11.8.0",
			"better-auth": "^1.4.5",
			"dotenv": "^17.2.3",
			"zod": "^4.1.13",
			"typescript": "^5.8.2",
			"tsdown": "^0.16.8",
			"@prisma/client": "^7.0.1",
			"date-fns": "^4.1.0",
			"ical.js": "^2.2.1",
			"clsx": "^2.1.1",
			"tailwind-merge": "^3.4.0"
		}
	},
	"scripts": {
		"check": "biome check --write .",
		"check:fix-all": "biome check --write --unsafe .",
		"prepare": "husky",
		"ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"test": "turbo test",
		"test:watch": "turbo test --watch",
		"lint": "turbo lint",
		"check-types": "turbo check-types",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean && rm -rf node_modules/.cache .turbo",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F @calendraft/db db:push",
		"db:studio": "turbo -F @calendraft/db db:studio",
		"db:generate": "turbo -F @calendraft/db db:generate",
		"db:migrate": "turbo -F @calendraft/db db:migrate",
		"db:seed": "turbo -F @calendraft/db db:seed",
		"security:audit": "bun audit",
		"security:audit:fix": "bun audit --fix || true",
		"security:all": "bun run security:audit"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.4",
		"@types/ioredis": "^5.0.0",
		"bun-osv-scanner": "^2.0.0",
		"husky": "^9.1.7",
		"knip": "^5.72.0",
		"lint-staged": "^16.2.7",
		"turbo": "^2.6.3"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "bun@1.3.4",
	"overrides": {
		"glob": "^10.5.0",
		"react": "19.2.0",
		"react-dom": "19.2.0"
	}
}
