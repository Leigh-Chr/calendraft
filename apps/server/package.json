		"@calendraft/db": "workspace:*",
		"@hono/trpc-server": "^0.4.0",
		"@sentry/bun": "^10.27.0",
		"@trpc/server": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"@types/bun": "^1.3.3",
		"tsdown": "catalog:",
		"@calendraft/config": "workspace:*"
	}
}
