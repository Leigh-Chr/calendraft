{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.mjs",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@calendraft/api": "workspace:*",
		"@calendraft/auth": "workspace:*",
		"@calendraft/db": "workspace:*",
		"@hono/trpc-server": "^0.4.1",
		"@sentry/bun": "^10.29.0",
		"@trpc/server": "catalog:",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"ioredis": "^5.4.1",
		"zod": "catalog:"
	},
	"devDependencies": {
		"typescript": "catalog:",
		"@types/bun": "^1.3.4",
		"tsdown": "catalog:",
		"@calendraft/config": "workspace:*",
		"vitest": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15"
	},
	"license": "AGPL-3.0"
}
