{
	"name": "@calendraft/api",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist *.tsbuildinfo",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"devDependencies": {
		"tsdown": "catalog:",
		"@calendraft/config": "workspace:*",
		"vitest": "^4.0.15",
		"@vitest/coverage-v8": "^4.0.15"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@calendraft/auth": "workspace:*",
		"@calendraft/core": "workspace:*",
		"@calendraft/db": "workspace:*",
		"@calendraft/schemas": "workspace:*",
		"@prisma/client": "catalog:",
		"@trpc/client": "catalog:",
		"@trpc/server": "catalog:",
		"@types/node": "^24.10.1",
		"dotenv": "catalog:",
		"hono": "catalog:",
		"ical.js": "catalog:",
		"zod": "catalog:"
	}
}
