{
	"name": "@calendraft/core",
	"version": "0.1.0",
	"description": "Core domain logic and types for Calendraft calendar management",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./types": {
			"types": "./dist/types/index.d.ts",
			"default": "./src/types/index.ts"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"default": "./src/utils/index.ts"
		},
		"./validation": {
			"types": "./dist/validation/index.d.ts",
			"default": "./src/validation/index.ts"
		},
		"./constants": {
			"types": "./dist/constants/index.d.ts",
			"default": "./src/constants/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": [
		"calendar",
		"events",
		"domain",
		"core",
		"validation"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"date-fns": "^4.1.0",
		"dequal": "^2.0.3"
	},
	"devDependencies": {
		"@calendraft/config": "workspace:*",
		"tsdown": "catalog:",
		"typescript": "catalog:"
	},
	"publishConfig": {
		"access": "public"
	}
}
