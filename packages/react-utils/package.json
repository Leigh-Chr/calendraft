{
	"name": "@calendraft/react-utils",
	"version": "0.1.0",
	"description": "React utilities and hooks for Calendraft applications",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./hooks": {
			"types": "./dist/hooks/index.d.ts",
			"default": "./src/hooks/index.ts"
		},
		"./query": {
			"types": "./dist/query/index.d.ts",
			"default": "./src/query/index.ts"
		},
		"./error": {
			"types": "./dist/error/index.d.ts",
			"default": "./src/error/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"typecheck": "tsc --noEmit",
		"test": "vitest run --passWithNoTests",
		"test:watch": "vitest",
		"clean": "rm -rf dist *.tsbuildinfo"
	},
	"keywords": [
		"react",
		"hooks",
		"utilities",
		"calendar"
	],
	"author": "",
	"license": "AGPL-3.0",
	"dependencies": {
		"clsx": "catalog:",
		"tailwind-merge": "catalog:",
		"usehooks-ts": "^3.1.1"
	},
	"peerDependencies": {
		"react": ">=18.0.0 || ^19.0.0",
		"react-dom": ">=18.0.0 || ^19.0.0",
		"@tanstack/react-query": ">=5.0.0"
	},
	"devDependencies": {
		"@calendraft/config": "workspace:*",
		"@types/react": "^19.2.7",
		"react": "^19.2.1",
		"@tanstack/react-query": "^5.90.12",
		"tsdown": "catalog:",
		"typescript": "catalog:",
		"vitest": "^4.0.15"
	},
	"publishConfig": {
		"access": "public"
	}
}
