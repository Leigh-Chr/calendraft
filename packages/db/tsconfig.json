{
	"extends": "@calendraft/config/tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"outDir": "dist",
		"declaration": false,
		"declarationMap": false,
		"sourceMap": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
