{
	"name": "@calendraft/db",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"default": "./src/*.ts"
		}
	},
	"scripts": {
		"build": "tsdown",
		"db:push": "prisma db push",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev"
	},
	"devDependencies": {
		"prisma": "^7.0.1",
		"tsdown": "catalog:",
		"@calendraft/config": "workspace:*"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@prisma/client": "catalog:",
		"@prisma/adapter-libsql": "^7.0.1",
		"dotenv": "catalog:",
		"zod": "catalog:"
	}
}
