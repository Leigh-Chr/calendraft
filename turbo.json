{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"remoteCache": {
		"enabled": true,
		"signature": true
	},
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env*",
				"src/**/*.{ts,tsx,js,jsx}",
				"tsconfig.json",
				"tsdown.config.ts",
				"vite.config.ts",
				"package.json"
			],
			"outputs": ["dist/**", "build/**", "*.tsbuildinfo"],
			"env": ["NODE_ENV", "VITE_*"]
		},
		"test": {
			"dependsOn": ["^build"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"src/**/*.{ts,tsx,js,jsx}",
				"**/*.test.{ts,tsx,js,jsx}",
				"**/*.spec.{ts,tsx,js,jsx}",
				"vitest.config.ts",
				"package.json"
			],
			"outputs": ["coverage/**"],
			"cache": true
		},
		"lint": {
			"dependsOn": ["^lint"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"src/**/*.{ts,tsx,js,jsx,json}",
				"biome.json",
				"package.json"
			],
			"outputs": [],
			"cache": true
		},
		"check-types": {
			"dependsOn": ["^build", "^check-types"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"src/**/*.{ts,tsx}",
				"tsconfig.json",
				"package.json"
			],
			"outputs": ["*.tsbuildinfo"],
			"cache": true
		},
		"typecheck": {
			"dependsOn": ["^build", "^check-types"],
			"inputs": [
				"$TURBO_DEFAULT$",
				"src/**/*.{ts,tsx}",
				"tsconfig.json",
				"package.json"
			],
			"outputs": ["*.tsbuildinfo"],
			"cache": true
		},
		"clean": {
			"cache": false,
			"inputs": [],
			"outputs": []
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"db:push": {
			"cache": false,
			"persistent": true
		},
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:migrate": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"cache": false,
			"persistent": true
		},
		"db:seed": {
			"cache": false,
			"persistent": false
		}
	}
}
